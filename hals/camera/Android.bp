        "CameraDeviceSession.cpp",
        "CameraProvider.cpp",
        "converters.cpp",
        "exif.cpp",
        "FakeRotatingCamera.cpp",
        "HwCamera.cpp",
        "jpeg.cpp",
        "list_fake_rotating_cameras.cpp",
        "list_qemu_cameras.cpp",
        "main.cpp",
        "metadata_utils.cpp",
        "BaseQemuCamera.cpp",
        "qemu_channel.cpp",
        "StreamBufferCache.cpp",
        "service_entry.cpp",
        "utils.cpp",
        "yuv.cpp",
