    cflags: [
        "-DLOG_TAG=\"camera.provider.ranchu\"",
    ],
}

cc_binary {
    name: "android.hardware.camera.provider.ranchu",
    defaults: ["android.hardware.camera.provider.ranchu_defaults"],
